{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["tsconfig.json"],
	"pipeline": {
		"@coderspirit/nominal-symbols#build": {
			"inputs": [
				"src/**",
				"package.json",
				"rollup.config.prod.mjs",
				"tsconfig.json"
			],
			"outputs": [
				"dist/**"
			],
			"dependsOn": [
				"^build:clean"
			]
		},
		"@coderspirit/nominal-symbols#lint:eslint": {
			"inputs": [
				"src/**",
				".eslintrc.cjs",
				"package.json",
				"tsconfig.json"
			],
			"dependsOn": [
				"^lint:eslint"
			]
		},
		"@coderspirit/nominal-symbols#lint:publint": {
			"inputs": ["dist/**", "package.json"],
			"dependsOn": [
				"@coderspirit/nominal-symbols#build",
				"^lint:publint"
			]
		},
		"@coderspirit/nominal-symbols#lint:tsc": {
			"inputs": [
				"src/**",
				"package.json",
				"tsconfig.json"
			],
			"dependsOn": [
				"^lint:tsc"
			]
		},
		"@coderspirit/nominal-symbols#lint": {
			"inputs": [
				"src/**",
				"package.json",
				"tsconfig.json"
			],
			"dependsOn": [
				"@coderspirit/nominal-symbols#lint:eslint",
				"@coderspirit/nominal-symbols#lint:publint",
				"@coderspirit/nominal-symbols#lint:tsc"
			]
		},
		"build": {
			"dependsOn": [
				"@coderspirit/nominal-symbols#build"
			]
		},
		"lint": {
			"dependsOn": [
				"@coderspirit/nominal-symbols#lint"
			]
		},
		"all": {
			"dependsOn": [
				"build",
				"lint"
			]
		}
	}
}
