{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"all": {
			"dependsOn": [
				"format",
				"build",
				"lint",
				"lint:publint",
				"typecheck",
				"test"
			]
		},
		"all:ci": {
			"dependsOn": [
				"build",
				"lint",
				"lint:publint",
				"typecheck",
				"test"
			]
		},
		"all:cov": {
			"dependsOn": [
				"format",
				"build",
				"lint",
				"lint:publint",
				"typecheck",
				"test:cov"
			]
		},
		"all:cov:ci": {
			"dependsOn": [
				"build",
				"lint",
				"lint:publint",
				"typecheck",
				"test:cov"
			]
		},
		"build": {
			"dependsOn": ["^lint:publint", "^build"],
			"inputs": [
				"./package.json",
				"./rollup.config.mjs",
				"./tsconfig.json",
				"./src/**/*",
				"!./src/**/*.test.mts"
			],
			"outputs": ["./dist/**/*"]
		},
		"format": {
			"inputs": [
				"./biome.jsonc",
				"./**/*.json",
				"./**/*.jsonc",
				"./**/*.js",
				"./**/*.mjs",
				"./**/*.cjs",
				"./**/*.ts",
				"./**/*.mts",
				"./**/*.cts",
				"./**/*.d.ts",
				"./**/*.d.mts",
				"./**/*.d.cts"
			],
			"outputs": [
				"./**/*.json",
				"./**/*.jsonc",
				"./**/*.js",
				"./**/*.mjs",
				"./**/*.cjs",
				"./**/*.ts",
				"./**/*.mts",
				"./**/*.cts",
				"./**/*.d.ts",
				"./**/*.d.mts",
				"./**/*.d.cts"
			]
		},
		"format-staged": {
			"inputs": [
				"./biome.jsonc",
				"./**/*.json",
				"./**/*.jsonc",
				"./**/*.js",
				"./**/*.mjs",
				"./**/*.cjs",
				"./**/*.ts",
				"./**/*.mts",
				"./**/*.cts",
				"./**/*.d.ts",
				"./**/*.d.mts",
				"./**/*.d.cts"
			],
			"outputs": [
				"./**/*.json",
				"./**/*.jsonc",
				"./**/*.js",
				"./**/*.mjs",
				"./**/*.cjs",
				"./**/*.ts",
				"./**/*.mts",
				"./**/*.cts",
				"./**/*.d.ts",
				"./**/*.d.mts",
				"./**/*.d.cts"
			]
		},
		"lint": {
			"inputs": [
				"./biome.jsonc",
				"./**/*.json",
				"./**/*.jsonc",
				"./**/*.js",
				"./**/*.mjs",
				"./**/*.cjs",
				"./**/*.ts",
				"./**/*.mts",
				"./**/*.cts",
				"./**/*.d.ts",
				"./**/*.d.mts",
				"./**/*.d.cts"
			]
		},
		"lint:publint": {
			"dependsOn": ["build", "^lint:publint"],
			"inputs": ["./package.json", "./dist/**/*"]
		},
		"publish:safe": {
			"dependsOn": ["^publish:safe"],
			"cache": false
		},
		"test": {
			"dependsOn": ["build"],
			"inputs": ["./package.json", "./vitest.config.mts", "./src/**/*"]
		},
		"test:cov": {
			"dependsOn": ["build"],
			"inputs": ["./package.json", "./src/**/*"],
			"outputs": ["./coverage/**/*"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck", "^build"],
			"inputs": ["./src/**/*", "./tsconfig.json", "./.tsbuildinfo"],
			"outputs": ["./.tsbuildinfo"]
		}
	}
}
